<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CONTROLADORES.VentanaAggColores">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Seleccione los productos:" />
        <ListView fx:id="listaProductos" prefHeight="200.0" prefWidth="500.0" />
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="Color:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="campoColor" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Spinner fx:id="selectorStock" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <Button mnemonicParsing="false" onAction="#realizarVenta" text="ACEPTAR" />
    </children>
</VBox>
